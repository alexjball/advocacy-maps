{
  "name": "@maple-testimony/functions",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn clean && yarn copy-files && yarn ts:build",
    "build:watch": "yarn copy-files && tsc --build --watch --preserveWatchOutput",
    "clean": "yarn ts:clean",
    "copy-files": "copyfiles -u 1 src/ssl/* dist/",
    "enable-cors-dev": "gsutil cors set cors.json gs://digital-testimony-dev.appspot.com",
    "enable-cors-prod": "gsutil cors set cors.json gs://digital-testimony-prod.appspot.com",
    "logs": "firebase functions:log",
    "test": "jest"
  },
  "dependencies": {
    "@google-cloud/firestore": "^5.0.2",
    "@google-cloud/pubsub": "^3.0.1",
    "@maple-testimony/shared": "workspace:*",
    "axios": "^0.25.0",
    "firebase-admin": "^10",
    "firebase-functions": "^3.22.0",
    "fuse.js": "6.5.3",
    "lodash": "^4.17.21",
    "luxon": "^2.3.1",
    "nanoid": "^3.3.2",
    "object-hash": "^3.0.0",
    "runtypes": "6.5.1",
    "ssl-root-cas": "^1.3.1",
    "typesense": "^1.2.2"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.186",
    "@types/luxon": "^2.0.9",
    "@types/object-hash": "^2.2.1",
    "copyfiles": "^2.4.1",
    "firebase-functions-test": "^0.3.3",
    "firebase-tools": "^11.7.0",
    "jest": "^27.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "4.5.5"
  },
  "engines": {
    "node": "16"
  }
}
